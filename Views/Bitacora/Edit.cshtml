                @Html.EditorFor(model => model.Fecha, new { htmlAttributes = new { @class = "form-control", @id = "Opcion" } })
                @Html.ValidationMessageFor(model => model.Fecha, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Compañia, htmlAttributes: new { @class = "control-label col-md-2" })
