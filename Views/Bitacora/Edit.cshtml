@model ProyectoGruas.Models.Bitacora

@{
    ViewBag.Title = "Edit";
}
<br /><br />
<h2>Editar</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Bitacora</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id_Bitacora)

